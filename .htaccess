RewriteEngine On
    RewriteRule ^about/([^/\.]+)/?$ views/about.php?lang=$1 [L]
    RewriteRule ^about$ views/about.php [L]
    RewriteRule ^portfolio/([^/\.]+)/?$ views/portfolio.php?lang=$1 [L]
    RewriteRule ^portfolio$ views/portfolio.php [L]
    RewriteRule ^blog/([^/\.]+)/article/([^/\.]+)/?$ views/blog.php?lang=$1&article=$2 [L]
    RewriteRule ^blog/([^/\.]+)/?$ views/blog.php?lang=$1 [L]
    RewriteRule ^blog$ views/blog.php [L]
    RewriteRule ^contact/([^/\.]+)/?$ views/contact.php?lang=$1 [L]
    RewriteRule ^contact$ views/contact.php [L]
    RewriteRule ^availability/([^/\.]+)/?$ views/availability.php?lang=$1 [L]
    RewriteRule ^availability$ views/availability.php [L]
    RewriteRule ^semafor$ semafor/index.php [L]
    RewriteRule ^([^/\.]+)/?$ views/index.php?lang=$1 [L]
    RewriteRule ^$ views/index.php [L]
